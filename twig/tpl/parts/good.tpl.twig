{% set title = good.vendor.name ~ " " ~ good.name %}

<h1>{{ title }} {% if good.model %}({{ good.model }}){% endif %}</h1>
<span><b>Color:</b> {{ good.color }}, <b>Warranty:</b> {{ good.warranty }}, <b>Country:</b> {{ good.country }}</span>

<br/>
<br/>

<table id="good_layout">
    <tr>
        <td>
            {% include "parts/good_images.tpl.twig" %}
            <br/>
            <br/>
            {% include "parts/good_models.tpl.twig" %}
        </td>
        <td>
            <section id="price">
                <b>Price:</b> ${{ good.price }} (<s>${{ good.price_old }}</s>) <button>Buy</button>
            </section>
            <br/>
            <br/>
            {% include "parts/good_details.tpl.twig" %}
            <br/>
            {% include "parts/good_tech_spec.tpl.twig" %}
        </td>
    </tr>
</table>